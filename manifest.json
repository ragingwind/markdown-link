{
    "name": "__MSG_appName__",
    "version": "0.0.13",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-grey-32.png",
        "128": "images/icon-grey-32.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-grey-32.png",
            "38": "images/icon-grey-32.png"
        },
        "default_title": "g-shorten",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "clipboardRead",
        "clipboardWrite",
        "storage"
    ]
}
